@using MyCrm.Domains.Entities.Tasks
@model MyCrm.Domains.ViewModels.Tasks.EditTaskViewModel
@{
    ViewData["Title"] = "ویرایش تسک";
}

@section custom_js
    {
    <partial name="_JqueryValidators" />
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">ساخت تسک</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post" id="filter-search">
                        <input type="hidden" asp-for="TaskId" />
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label>اولویت </label>
                                <input asp-for="Priority" type="number" class="form-control">
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label>تا تاریخ </label>
                                <input asp-for="UntilDate" class="form-control datePicker-custom" autocomplete="off">
                                <span asp-validation-for="UntilDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label>وضعیت</label>
                                <select asp-for="TaskStatus" asp-items="@(Html.GetEnumSelectList<CrmTaskStatus>())" class="form-control"></select>
                                <span asp-validation-for="TaskStatus" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label>توضیحات</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary">افزودن</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


