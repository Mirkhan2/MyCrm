@using MyCrm.Application.Extensions
@using MyCrm.Domains.Entities.Account
@model MyCrm.Domains.ViewModels.Orders.OrderSelectMarketerViewModel

@{
	var marketerList = ViewBag.Marketers as List<Marketer>;
	var marketerPredict = ViewBag.MarketerPredict as Marketer;
}



<input type="hidden" asp-for="OrderId" />
<div class="form-row">
	
	<div class="form-group col-md-12">
		<label asp-for="Description"> </label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group col-md-6">
		<label>انتخاب بازاریاب</label>
		<select class="form-control" asp-for="MarketerId">
			@foreach (var marketer in marketerList)
			{
				<option value="@marketer.UserId">@marketer.User.GetUserShowName()</option>
			}
		</select>
		@if (marketerPredict != null)
		{
				<span class="text-success">Bazaryab Pishnahadiii @marketerPredict.User.GetUserShowName()</span>
		

		}
		<span asp-validation-for="MarketerId" class="text-danger"></span>
	</div>
</div> 